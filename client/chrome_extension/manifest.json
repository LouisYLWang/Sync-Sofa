{
    "name": "Sync Sofa - Online Video Synchronizer",
    "version": "1.0.11",
    "description": "This extension allows multi-user sync streaming video in a fast, simple and stable way.",
    "permissions": [
        "storage",
        "tabs",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.bilibili.com/*",
                "https://www.dandanzan.com/*",
                "https://duonaolive.com/*",
                "https://v.qq.com/*",
                "https://www.iqiyi.com/*",
                "https://www.iq.com/*",
                "https://www.weiyun.com/*",
                "https://www.youtube.com/*",
                "https://v.youku.com/*",
                "https://www.mgtv.com/*",
                "http://127.0.0.1/*",
                "http://localhost/*",
                "http://music.jsososo.com/*",
                "https://v.douyu.com/*",
                "https://www.xuetangx.com/*",
                "https://w.mgtv.com/*",
                "https://www.ixigua.com/*",
                "https://music.youtube.com/*",
                "https://vimeo.com/*",
                "https://www.acfun.cn/*",
                "https://www.dandanzan.cc/*",
                "https://*.zoom.us/*",
                "https://*.panopto.com/*",
                "https://www.coursera.org/*",
                "https://www.aliyundrive.com/*",
                "file:///*"
            ],
            "run_at": "document_end",
            "js": [
                "sweetalert.min.js",
                "interact.min.js",
                "content.js"
            ],
            "css": [
                "/assets/css/chat.css",
                "/assets/css/vidcall.css"
            ]
        }
    ],
    "manifest_version": 2,
    "icons": {
        "16": "/icons/icon16_on.png",
        "48": "/icons/icon48_on.png",
        "128": "/icons/icon128_on.png"
    },
    "page_action":{
        "default_icon": "/icons/icon128_on.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts" : ["background.js"],  
        "persistent" : false  
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        "/images/no_video_local.png",
        "/images/no_video_remote.png"
      ]
}